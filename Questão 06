#include <stdio.h>
int main (){
  float altura, peso;
  char sexo;
  printf("digite seu sexo\n");
  scanf("%c",&sexo);
  printf("digite sua altura em metros\n");
  scanf("%f",&altura);
  if(sexo == 'F'){
    peso = 62.1 * altura - 44.7;
    printf("peso ideal = %.2f\n",peso);}
   else if(sexo == 'M'){
     peso = 72.7 * altura - 58;
     printf("peso ideal = %.2f\n",peso);}
  else{printf("sexo invalido\n");}
  return 0;}
