#include <stdio.h>
int main(){
	float altura,peso;
	char sexo;
	printf ("digite sua altura e seu sexo\n");
	scanf ("%f", &altura);
 	getchar();
	sexo = getchar();
	switch(sexo){
		case 'M':
		case 'm':
			peso = 72.7* altura -58;
			printf ("peso ideal = %f\n",peso);
			break;
		case 'F':
		case 'f':
			peso = 62.1* altura -44.7;
			printf ("peso ideal = %f\n",peso);
			break;
		default:
			printf ("sexo inv√°lido\n");
			break;}
return 0;}
